<%= form_with(model: @link, url: links_path, local: true) do |f| %>
  <%= f.label :given_url,"Enter the URL you want to shorten:", class: "font-bold text-2xl" %>
  <%= f.text_field :given_url %>
  <%= f.submit "Shorten URL", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
